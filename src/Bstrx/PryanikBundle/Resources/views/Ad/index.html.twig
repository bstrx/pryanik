{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Ad list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Enabled</th>
                <th>Price</th>
                <th>Created</th>
                <th>Type</th>
                <th>Title</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('ad_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.enabled }}</td>
                <td>{{ entity.price }}</td>
                <td>{% if entity.created %}{{ entity.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.type }}</td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.description }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('ad_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('ad_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('ad_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
